pipeline {
  agent any
  stages {
    stage('Install') {
      steps {
        sh 'npm ci'
      }
    }
    stage('Test') {
      steps {
        sh 'npx cypress run'
      }
    }
    stage('Publish Report') {
      steps {
        publishHTML(target: [
          allowMissing: false,
          alwaysLinkToLastBuild: true,
          keepAll: true,
          reportDir: 'mochawesome-report',
          reportFiles: 'mochawesome.html',
          reportName: 'Cypress Test Report'
        ])
      }
    }
  }
}
